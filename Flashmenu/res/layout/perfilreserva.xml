<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    tools:context="reserva.perfilReserva" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/perfil_perfilreserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/perfil"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/nombreCliente_perfilreserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/perfil_perfilreserva"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_below="@+id/relativeLayout1"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/detallecompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Reserva ID "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/detalledireccion_reserva"
            android:layout_marginTop="28dp"
            android:text="Productos: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/detallehora_reserva"
            android:layout_marginTop="23dp"
            android:text="Direccion: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detalledireccion_reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/textView2"
            android:text="direccion"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detallecompra"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/detallecompra"
            android:text="Fecha: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/detallefecha_reserva"
            android:layout_marginTop="20dp"
            android:text="Total: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totalcompra_reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detallefecha_reserva"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView1"
            android:text="$$"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignTop="@+id/detallehora_reserva"
            android:text="Hora: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detallehora_reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/totalcompra_reserva"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/textView2"
            android:text="00:00:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detalledireccion_reserva"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/detalleproductosComprados_reserva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detalle productos"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/detallefecha_reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/detallehora_reserva"
            android:layout_alignParentRight="true"
            android:text="A-M-D"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/IDreserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/detallecompra"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/detallecompra"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eliminar_reserva"
        android:layout_alignParentRight="true"
        android:layout_marginRight="84dp"
        android:text="Eliminar"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/AvisoLlegada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eliminar_reserva"
        android:layout_alignBottom="@+id/eliminar_reserva"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="42dp"
        android:background="@drawable/aviso"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/eliminar_reserva"
        android:layout_width="74dp"
        android:layout_height="72dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:background="@drawable/eliminar"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AvisoLlegada"
        android:layout_alignTop="@+id/textView7"
        android:text="Avisar llegada"
        android:textColor="#FFFFFF" />

</RelativeLayout>