<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cliente.perfilCliente" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Perfil cliente"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/verReservas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/reservas"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/modifDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cerrarSesion"
        android:layout_alignBottom="@+id/cerrarSesion"
        android:layout_alignLeft="@+id/verReservas"
        android:background="@drawable/modificar"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/cerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/verReservas"
        android:layout_marginRight="26dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/cerrar"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/volverMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cerrarSesion"
        android:layout_alignTop="@+id/verReservas"
        android:background="@drawable/map"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/volverMapa"
        android:layout_alignLeft="@+id/verReservas"
        android:textColor="#FFFFFF"
        android:text="Mis reservas" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/volverMapa"
        android:layout_alignLeft="@+id/volverMapa"
        android:textColor="#FFFFFF"
        android:text="Restaurantes" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/cerrarSesion"
        android:text="Cerrar sesion" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/modifDatos"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:text="Modificar mis datos" />

    <Button
        android:id="@+id/preferencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/cerrarSesion"
        android:layout_marginTop="38dp"
        android:text="Button" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/preferencias"
        android:layout_below="@+id/cerrarSesion"
        android:layout_marginTop="22dp"
        android:text="Preferencias"
        android:textColor="#FFFFFF" />

</RelativeLayout>